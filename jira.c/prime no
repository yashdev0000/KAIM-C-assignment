#include <stdio.h>

int main() {
    int a, i, c = 0;

    printf("Enter a number: ");
    scanf("%d", &a);

   
    for (i = 2; i <= a / 2; i++) 
{
        if (a % i == 0) {
            c = 1;  // Set c to 1 if a is divisible by i
            break;
}
    {

    if (c == 0 && a > 1)  
        printf("Number %d is a prime number.\n", a);
    else
        printf("Number %d is not a prime number.\n", a);

    return 0;
}